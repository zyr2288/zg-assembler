{
	"scopeName": "source.asm.zg-assembly",
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"patterns": [
		{ "include": "#comment" },
		{ "include": "#strings" },
		{ "include": "#asmCommand" },
		{ "include": "#defined" },
		{ "include": "#dataGroup" },
		{ "include": "#function" },
		{ "include": "#number" },
		{ "include": "#variable" }
	],
	"repository": {
		"comment": {
			"name": "comment.base",
			"begin": ";",
			"end": "$"
		},
		"strings": {
			"name": "string.quoted.double.zg-assembly",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"match": "\\\\\"",
					"name": "constant.character.escape.zg-assembly"
				}
			]
		},
		"asmCommand": {
			"name": "keyword.other.zg-assembly.commands",
			"match": "(?i)(^|\\s+)(\\.BASE|\\.ORG|\\.IF|\\.INCLUDE|\\.INCBIN|\\.ELSEIF|\\.ELSE|\\.ENDIF|\\.IFDEF|\\.IFNDEF|\\.DB|\\.DW|\\.DL|\\.ENDD|\\.REPEAT|\\.ENDR|\\.ENDM|\\.MSG)\\s+"
		},
		"defined": {
			"name": "keyword.other.zg-assembly.commands",
			"begin": "(?i)(^|\\s+)\\.DEF\\s+",
			"end": "(?=\\,|;)|$",
			"patterns": [
				{
					"name": "variable.other.enummember",
					"match": "[^,]+"
				}
			]
		},
		"dataGroup": {
			"name": "keyword.other.zg-assembly.commands",
			"begin": "(?i)(^|\\s+)(\\.DBG|\\.DWG|\\.DLG)\\s+",
			"end": "(?=;)|$",
			"patterns": [
				{
					"name": "entity.name.class",
					"match": "[^;]+"
				}
			]
		},
		"function": {
			"name": "keyword.other.zg-assembly.commands",
			"begin": "(?i)(^|\\s+)\\.MACRO\\s+",
			"end": "(?=\\,|;)|$",
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "[^,]+"
				}
			]
		},
		"number": {
			"patterns": [
				{
					"name": "constant.numeric.hex.zg-assembly",
					"match": "\\$[0-9a-fA-F]+\\b"
				},
				{
					"name": "constant.numeric.binary.zg-assembly",
					"match": "\\@[0-1]+\\b"
				},
				{
					"name": "constant.numeric.zg-assembly",
					"match": "\\b[0-9]+\\b"
				},
				{
					"name": "keyword.other.zg-assembly.commands",
					"begin": "(?i)(^|\\s+)\\.HEX\\s+",
					"end": "(?=;)|$",
					"patterns": [
						{
							"name": "constant.numeric.hex.zg-assembly",
							"match": "[0-9a-fA-F ]+"
						}
					]
				}
			]
		},
		"variable": {
			"name": "variable.name.zg-assembly",
			"match": "[^\\+\\-\\*\\/\\>\\<\\(\\)\\,\\#\\=\\!\\[\\]\\&\\|]"
		}
	}
}
